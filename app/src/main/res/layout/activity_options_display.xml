<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsDisplay"
    android:background="#03A9F4"
    >

    <Button
        android:id="@+id/btnAccSet"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/set"
        />
    <TextView
        android:id="@+id/tvAcc"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="80dp"

        android:text="Settings"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btnTips"

        android:background="@drawable/energy"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="250dp"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    <TextView
        android:id="@+id/tvTips"
        android:layout_width="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="280dp"
        android:text="Energy Tips"
        android:textColor="#ffffff"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnDetails"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="50dp"
        android:layout_width="120dp"

        android:background="@drawable/custdetail"
        android:layout_height="120dp" />
    <TextView
        android:id="@+id/tvDetails"
        android:layout_width="wrap_content"
        android:layout_marginLeft="80dp"
        android:text="View Profile"
        android:textColor="#ffffff"
        android:layout_marginTop="490dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnConsum"

        android:background="@drawable/cons"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="250dp"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    <TextView
        android:id="@+id/tvCons"
        android:layout_width="wrap_content"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="250dp"
        android:textColor="#ffffff"
        android:text="Check Consumption"
        android:layout_height="wrap_content" />
</RelativeLayout>